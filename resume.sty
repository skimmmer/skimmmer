}

\newcommand{\inlinesection}[2]{
	\flushleft
	\begin{minipage}{1.5in}
		\Large\boldfont#1 & 
		\hspace{0.125in}
	\end{minipage}
	\begin{tabular}[t]{!{\VRule[1pt]}@{}p{5.5in}}
		\hspace{0.125in}
		\parbox[t]{5.5in}{\lightfont#2}
	\end{tabular}
	\\
	\vspace{0.2in}
}

\newcommand{\inlinesubsection}[2]{
	\begin{minipage}{1.5in}
		\flushright\normalsize\lightitalicfont\emph{#1}
		\hspace{0.125in}
	\end{minipage}
	\begin{tabular}[t]{!{\VRule[1pt]}@{}p{5.5in}}
		\hspace{0.125in}
		\parbox[t]{5.5in}{\lightfont#2}
	\end{tabular}
	\\
	\vspace{0.2in}
}

